<div class="table-responsive">
  <% if @albums.count==0 %>
    <h1>Sorry no Album to Show</h1>
  <% else %>

  <table class="table table-hover table-bordered">
    <tr class="bg-white">
      <th>
        <p>Album Logo</p>
      </th>
      <th>
        <p>ID</p>
      </th>
      <th>
        <p>Album Name</p>
      </th>
      <th>
        <p>Album Logo</p>
      </th>
      <th>
        <p> Description</p>
      </th>
      <th>
        <p>Actions </p>
      </th>
      <th>
        <p>Images</p>
      </th>
    </tr>
   <% @albums.each do |album|%>
   <tr>
     <td >
       <p><%= image_tag album.avatar.url(:thumb) , :class => "img-circle" , :width => "30px",:height => "30px"  %></p>
     </td>
     <td>
       <p><%= album.id %></p>
     </td>
     <td>
       <p><%= album.name %></p>
     </td>
     <td>
       <p><%= album.description %></p></p>
     </td>
     <td>
       <div class="btn-group"><%=link_to 'edit',edit_album_path(album) , :class => 'btn btn-success'%> <%=link_to 'delete', album_path(album), :method => :delete , :class => 'btn btn-danger' %></div>
     </td>
     <td>
       <p><%= album.pics.count %>/<%=link_to 'view',album_path(album) , :class => 'btn btn-info' %></p></p>
     </td>
   </tr>
   <% end %>
</table>
<center> <%= paginate @albums %>  </center>
<%= link_to "delete all", delete_all_albums_path , :class => 'btn btn-danger' %> </p>
<% end %>
</div>


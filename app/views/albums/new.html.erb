

<%= form_for @album , url: albums_path, :html => {:class => 'form-horizontal'} do |f| %>
  <legend>create new album</legend>
  <% if @album.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@album.errors.count, "error") %> prohibited
        this album from being saved:
      </h2>
      <ul>
        <% @album.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :Album_name , :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name , :class => "form-control" %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :Album_description , :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description , :class => "form-control" %>
    </div>
  </div>   

  <div id="pic" class="row">

      <%= f.fields_for :pics do |p|   %>
        <div class="form-group col-md-6">
            <%= p.label :Pic_name , :class => "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= p.text_field :name , :class => "form-control" %>
            </div>
        </div>
        <div class="col-md-6" >
          <div class="input-group">
            <span class="input-group-btn">
              <span class="btn btn-primary btn-file">          
                Browse&hellip;<%= p.file_field :avatar , :class => "form-control" %>
              </span>
            </span>
            <input type="text" class="form-control" readonly>
          </div>          
        </div>

        <%= p.fields_for :tags do |t|   %>
          <div class="form-group col-md-4">
            <%= t.label "Tags#" , :class => "col-sm-2 control-label"%>
            <div class="col-sm-10">
              <%= t.text_field :name  , :class => "form-control"  %>
            </div>
          </div>
        <% end %>     
      <% end %>

  </div>

<%= tag "input", { "type" => "button", "value" => "Add", "onclick"=> "add()" } %>
<%= tag "input", { "type" => "button", "value" => "remove", "onclick"=> "remov()" } %>


   

  <p>
  	<%= f.submit %>
  </p>

<%end%>



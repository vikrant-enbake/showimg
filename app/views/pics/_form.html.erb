    <%= form_for @pic ,:html => { :multipart => true, :class => "form-horizontal" }   do |f| %>
      <% if @pic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@pic.errors.count, "error") %> prohibited this pic from being saved:</h2>
          <ul>
            <% @pic.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <%= f.label :name ,:class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name , :class => "form-control"%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :desc ,:class => "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :desc , :class => "form-control"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.file_field :avatar , :class => "form-control"%>
        </div>
        <%= f.hidden_field :album_id,:value => session[:current_album_id] %>
      </div>
      <div class="form-group">
        <%= f.text_field :all_tags, placeholder: "Tags separated with comma", :class => "form-control" %>
      </div>
 
      <%= f.submit "Submit" , :class => "btn btn-primary" %>
    <%end%>